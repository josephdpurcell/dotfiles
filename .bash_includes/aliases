alias mv='mv -i'
if [ `uname -s` = 'Darwin' ]; then
    # add "G" flag to enable colorized output
    alias ls='ls -G'
    alias ll='ls -lhaG'
    alias la='ls -1G'
    alias laa='ls -A1G'
    alias lss='ls -lhasG'
    alias lm='ls -lhamG'
else
    alias ll='ls -lha'
    alias la='ls -1'
    alias laa='ls -A1'
    alias lss='ls -lhas'
    alias lm='ls -lham'
fi
alias lsproc='sudo netstat -tulpn'
alias rgrep='grep -Rn' # recursive grep and show line number
alias psgrep='ps aux | grep'
alias passgen='echo "Options:
    -m Length of password
    -n Number of passwords

Generating 6 passwords 32 characters long:
"; apg -M SNCL -m 32'
